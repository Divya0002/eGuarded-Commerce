package action;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class Vupload extends HttpServlet {

    protected void processRequest(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        response.setContentType("text/html;charset=UTF-8");
        try (PrintWriter out = response.getWriter()) {
            String uname = request.getParameter("rname");
            String pass = request.getParameter("rpass");
            // ... (retrieve other form parameters)

            try {
                Connection cn = Db.getConnection();
                PreparedStatement ps = cn.prepareStatement("INSERT INTO your_table (name, pass) VALUES (?, ?)");
                ps.setString(1, uname);
                ps.setString(2, pass);
                // ... (set other parameters)
                int i = ps.executeUpdate();
                if (i == 1) {
                    response.sendRedirect("vreg.jsp?msg=Registered Successfully");
                } else {
                    response.sendRedirect("vreg.jsp?msgg=Registered Failed");
                }
                cn.close();
            } catch (Exception e) {
                System.out.println("Exception Error in Upload " + e.getMessage());
            }
        }
    }

    // ... (doGet, doPost, getServletInfo methods)

}
